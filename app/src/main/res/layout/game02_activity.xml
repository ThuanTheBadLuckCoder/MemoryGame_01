<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    android:padding="16dp">
    <ImageView
    android:id="@+id/cardImageView1"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:contentDescription="@string/card_description"
    android:onClick="onCardClick"
    android:tag="card_1"
    android:visibility="visible"
    android:layout_marginStart="20dp"
        />


    <ImageView
    android:id="@+id/cardImageView2"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:contentDescription="@string/card_description"
    android:onClick="onCardClick"
    android:tag="card_2"
    android:visibility="visible"
    android:layout_marginStart="20dp"
        />

    <!-- ImageView for the third card -->
    <ImageView
    android:id="@+id/cardImageView3"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:contentDescription="@string/card_description"
    android:onClick="onCardClick"
    android:tag="card_3"
    android:visibility="visible"
    android:layout_marginStart="20dp"
        />
    <ImageView
        android:id="@+id/cardImageView4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="@string/card_description"
        android:onClick="onCardClick"
        android:tag="card_4"
        android:visibility="invisible"
        android:layout_marginStart="20dp"
        />

    <ImageView
        android:id="@+id/cardImageView5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="@string/card_description"
        android:onClick="onCardClick"
        android:tag="card_3"
        android:visibility="invisible"
        android:layout_marginStart="20dp"
        />


    </LinearLayout>


