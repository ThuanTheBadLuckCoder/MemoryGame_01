<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".Game02Activity">

    <!-- Sử dụng một vòng lặp để tạo các ImageView -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Sử dụng một vòng lặp để tạo các ImageView -->
        <ImageView
            android:id="@+id/cardImageView1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/card_description"
            android:onClick="onCardClick"
            android:tag="" />

        <ImageView
            android:id="@+id/cardImageView2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/card_description"
            android:onClick="onCardClick"
            android:tag="" />

        <ImageView
            android:id="@+id/cardImageView3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/card_description"
            android:onClick="onCardClick"
            android:tag="" />

        <!-- Thêm thêm ImageView nếu cần -->
        <ImageView
            android:id="@+id/cardImageView4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/card_description"
            android:onClick="onCardClick"
            android:tag="" />

        <ImageView
            android:id="@+id/cardImageView5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/card_description"
            android:onClick="onCardClick"
            android:tag="" />

    </LinearLayout>
</LinearLayout>
